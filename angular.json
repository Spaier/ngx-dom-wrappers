{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "cli": {
    "packageManager": "yarn"
  },
  "schematics": {
    "@schematics/angular:component": {
      "styleext": "scss"
    }
  },
  "projects": {
    "ngx-dom-wrappers": {
      "root": "projects/ngx-dom-wrappers",
      "sourceRoot": "projects/ngx-dom-wrappers/src",
      "projectType": "library",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/ngx-dom-wrappers/tsconfig.lib.json",
            "project": "projects/ngx-dom-wrappers/ng-package.json"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/ngx-dom-wrappers/src/test.ts",
            "tsConfig": "projects/ngx-dom-wrappers/tsconfig.spec.json",
            "karmaConfig": "karma.conf.js"
          },
          "configurations": {
            "ci": {
              "codeCoverage": true,
              "progress": false,
              "browsers": "ChromeHeadlessCI",
              "watch": false
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/ngx-dom-wrappers/tsconfig.lib.json",
              "projects/ngx-dom-wrappers/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "ngx-dom-wrappers"
}
